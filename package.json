{
  "name": "em-spec",
  "version": "0.2.7",
  "description": "Real-time audio spectrogram visualizer with enhanced low-end and reassignment method implementation",
  "author": "Jeffrey Meyer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-audio-loopback": "^1.0.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "rimraf": "6.0.1"
  },
  "resolutions": {},
  "build": {
    "appId": "com.effree.emspec",
    "productName": "EM-Spec",
    "compression": "maximum",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [],
    "extraFiles": [],
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "assets/**/*",
      "package.json",
      "!**/*.md",
      "!**/LICENSE*",
      "!node_modules/.cache/**"
    ],
    "asarUnpack": [
      "**/node_modules/electron-audio-loopback/**"
    ],
    "removePackageScripts": true,
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.ico",
      "electronLanguages": [
        "en-US"
      ]
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "identity": null,
      "electronLanguages": [
        "en"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "afterPack": "./build-scripts/remove-licenses.js",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}
