{
  "name": "em-spec",
  "version": "0.3.7",
  "description": "Real-time audio spectrogram visualizer with enhanced low-end and reassignment method implementation",
  "author": "Jeffrey Meyer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "pack": "electron-builder --dir",
    "dist": "npm run build-native && electron-builder",
    "dist:win": "npm run build-native && electron-builder --win --x64",
    "dist:mac": "npm run build-native && electron-builder --mac",
    "build-native": "node-gyp rebuild",
    "rebuild-native": "electron-rebuild -f -w spectrogram_native",
    "postinstall": "npm run build-native && npm run rebuild-native"
  },
  "dependencies": {
    "electron-audio-loopback": "^1.0.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^10.0.1",
    "rimraf": "6.0.1"
  }
}